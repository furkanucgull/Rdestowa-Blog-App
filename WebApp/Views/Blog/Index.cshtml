@model List<BlogViewModel>
<body>

    <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <!-- Page Content -->
    <!-- Banner Starts Here -->
    <div class="heading-page header-text  justify-content-center" style="margin-left:150px;">
        <section class="page-heading" style="max-height:410px; max-width:800px;">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-content">
                            <h4 class="d-flex justify-content-center" style="margin-bottom:50px;">Recent Posts</h4>
                            <h2 class="d-flex justify-content-center" style="margin-bottom:50px;">Our Recent Blog Entries</h2>
                        </div>
                       
                    </div>

                </div>
                <div class="wrap">
                    <form method="get" action="@Url.Action("Create", "Blog")">
                        <div class="button-container">
                            <button class="button" type="submit">Add Blog Post!</button>
                            <div class="button-effects">
                                <div class="button-ring"></div>
                                <div class="button-before"></div>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </section>
    </div>
    <!-- Banner Ends Here -->

    <section class="blog-posts grid-system">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="all-blog-posts">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                var imagePath = Url.Content(item.ImagePath);
                                <div class="col-lg-6">
                                    <div class="blog-post">
                                        <div class="blog-thumb">
                                            <img src="@imagePath" alt="">
                                        </div>
                                        <div class="down-content">
                                            <span>@item.Category</span>
                                            <a asp-action="Details" asp-controller="Blog" asp-route-id="@item.Id"><h4>@item.Title</h4></a>
                                            <ul class="post-info">
                                                <li><a href="#">@item.Author</a></li>
                                                <li><a href="#">@item.CreatedAt</a></li>
                                                <li><a href="#">@item.CommentCount Comments</a></li>
                                            </ul>
                                            <p>@item.Content.Substring(0,150)...</p>
                                            <div class="post-options">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        @*  <ul class="post-tags">
                                                    <li><i class="fa fa-tags"></i></li>
                                                    <li><a href="#">Best Templates</a>,</li>
                                                    <li><a href="#">TemplateMo</a></li>
                                                    </ul> *@
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="social-icons">
                        <li><a href="#">Facebook</a></li>
                        <li><a href="#">Twitter</a></li>
                        <li><a href="#">Behance</a></li>
                        <li><a href="#">Linkedin</a></li>
                        <li><a href="#">Dribbble</a></li>
                    </ul>
                </div>
                <div class="col-lg-12">
                    <div class="copyright-text">
                        <p>
                            Copyright 2020 Stand Blog Co.

                            | Design: <a rel="nofollow" href="https://templatemo.com" target="_parent">TemplateMo</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Additional Scripts -->
    <script src="assets/js/custom.js"></script>
    <script src="assets/js/owl.js"></script>
    <script src="assets/js/slick.js"></script>
    <script src="assets/js/isotope.js"></script>
    <script src="assets/js/accordions.js"></script>

    <script language="text/Javascript">
        cleared[0] = cleared[1] = cleared[2] = 0; //set a cleared flag for each field
        function clearField(t) {                   //declaring the array outside of the
            if (!cleared[t.id]) {                      // function makes it static and global
                cleared[t.id] = 1;  // you could use true and false, but that's more typing
                t.value = '';         // with more chance of typos
                t.style.color = '#fff';
            }
        }
    </script>

</body>
</html>